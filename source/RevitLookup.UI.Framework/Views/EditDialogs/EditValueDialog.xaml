<rl:ContentDialog
    x:Class="RevitLookup.UI.Framework.Views.EditDialogs.EditValueDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:rl="http://revitlookup.com/xaml"
    xmlns:editDialogs="clr-namespace:RevitLookup.UI.Framework.Views.EditDialogs"
    Title="Update the value"
    PrimaryButtonText="Update"
    CloseButtonText="Cancel"
    HorizontalContentAlignment="Center"
    VerticalContentAlignment="Center"
    mc:Ignorable="d"
    d:DesignHeight="540"
    d:DesignWidth="1000">

    <rl:ContentDialog.Resources>
        <ResourceDictionary>
            <!-- ReSharper disable Xaml.StaticResourceNotResolved -->
            <Style
                BasedOn="{StaticResource DefaultContentDialogStyle}"
                TargetType="{x:Type editDialogs:EditValueDialog}" />
            <!-- ReSharper restore Xaml.StaticResourceNotResolved -->
        </ResourceDictionary>
    </rl:ContentDialog.Resources>

    <StackPanel
        MinWidth="350">
        <Label
            x:Name="ValueLabel"
            Content="Name" />
        <rl:TextBox
            x:Name="ValueBox" />
    </StackPanel>

</rl:ContentDialog>