    <!-- ReSharper restore Xaml.StaticResourceNotResolved -->

    <Grid>
        <ScrollViewer
            x:Name="RootScrollViewer"
            VerticalScrollBarVisibility="Disabled"
            HorizontalScrollBarVisibility="Hidden"
            SizeChanged="OnRootScrollSizeChanged">
            <StackPanel
                x:Name="TilesPanel"
                Orientation="Horizontal">
                <controls:HeaderTile
                    Title="Author"
                    Description="Founder and maintainer of the project"
                    Link="https://www.linkedin.com/in/nice3point/">
                    <controls:HeaderTile.Source>
                        <Viewbox
                            Height="52">
                            <Path
                                Data="{StaticResource LinkedinIconGeometry}"
                                Fill="#007EBB" />
                        </Viewbox>
                    </controls:HeaderTile.Source>
                </controls:HeaderTile>
                <controls:HeaderTile
                    Title="RevitLookup GitHub"
                    Description="Project source repository page"
                    Link="https://github.com/jeremytammik/RevitLookup"
                    Margin="12 0 0 0">
                    <controls:HeaderTile.Source>
                        <Viewbox
                            Height="52"
                            Margin="-20 0 0 0">
                            <Path
                                Data="{StaticResource GitHubIconGeometry}"
                                Fill="{DynamicResource TextFillColorPrimaryBrush}" />
                        </Viewbox>
                    </controls:HeaderTile.Source>
                </controls:HeaderTile>
                <controls:HeaderTile
                    Title="WPF GitHub"
                    Description="The repository used for the user interface in this project"
                    Link="https://github.com/lepoco/wpfui"
                    Margin="12 0 0 0">
                    <controls:HeaderTile.Source>
                        <Viewbox
                            Height="52"
                            Margin="-20 0 0 0">
                            <Path
                                Data="{StaticResource GitHubIconGeometry}"
                                Fill="{DynamicResource TextFillColorPrimaryBrush}" />
                        </Viewbox>
                    </controls:HeaderTile.Source>
                </controls:HeaderTile>
                <controls:HeaderTile
                    Title="C# Templates"
                    Description="Templates for Revit add-ins development"
                    Link="https://github.com/Nice3point/RevitTemplates"
                    Margin="12 0 0 0">
                    <controls:HeaderTile.Source>
                        <Image
                            RenderOptions.EdgeMode="Aliased"
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Source="pack://application:,,,/RevitLookup.UI.Framework;component/Resources/Images/ProductIcon.png">
                        </Image>
                    </controls:HeaderTile.Source>
                </controls:HeaderTile>
                <controls:HeaderTile
                    Title="C# Toolkit"
                    Description="Toolkit for Revit add-ins development"
                    Link="https://github.com/Nice3point/RevitToolkit"
                    Margin="12 0 0 0">
                    <controls:HeaderTile.Source>
                        <Image
                            RenderOptions.EdgeMode="Aliased"
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Source="pack://application:,,,/RevitLookup.UI.Framework;component/Resources/Images/ProductIcon.png">
                        </Image>
                    </controls:HeaderTile.Source>
                </controls:HeaderTile>
                <controls:HeaderTile
                    Title="C# Extensions"
                    Description="Extensions for Revit add-ins development"
                    Link="https://github.com/Nice3point/RevitExtensions"
                    Margin="12 0 0 0">
                    <controls:HeaderTile.Source>
                        <Image
                            RenderOptions.EdgeMode="Aliased"
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Source="pack://application:,,,/RevitLookup.UI.Framework;component/Resources/Images/ProductIcon.png">
                        </Image>
                    </controls:HeaderTile.Source>
                </controls:HeaderTile>
            </StackPanel>
        </ScrollViewer>
        <Button
            x:Name="ScrollBackButton"
            Style="{DynamicResource TileGalleryScrollButtonStyle}"
            Margin="8,-16,0,0"
            AutomationProperties.Name="Scroll left"
            Click="OnScrollButtonClicked"
            ToolTip="Scroll left">
            <ui:SymbolIcon
                FontSize="8"
                Filled="True"
                Symbol="TriangleLeft12" />
        </Button>
        <Button
            x:Name="ScrollForwardButton"
            Style="{DynamicResource TileGalleryScrollButtonStyle}"
            Margin="0,-16,8,0"
            HorizontalAlignment="Right"
            AutomationProperties.Name="Scroll right"
            Click="OnScrollForwardButtonClicked"
            ToolTip="Scroll right">
            <ui:SymbolIcon
                FontSize="8"
                Filled="True"
                Symbol="TriangleRight12" />
        </Button>
    </Grid>
</UserControl>