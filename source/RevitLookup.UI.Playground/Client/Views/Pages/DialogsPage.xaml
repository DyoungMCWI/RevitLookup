<Page
    x:Class="RevitLookup.UI.Playground.Client.Views.Pages.DialogsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ui="http://revitlookup.com/xaml"
    xmlns:pages="clr-namespace:RevitLookup.UI.Playground.Client.Views.Pages"
    mc:Ignorable="d"
    d:DesignHeight="1500"
    d:DesignWidth="500"
    d:DataContext="{d:DesignInstance pages:DialogsPage}">

    <StackPanel
        Margin="0 24 0 0">

        <ui:TextBlock
            Text="About program"
            FontTypography="BodyStrong" />
        <ui:CardAction
            Margin="0 8 0 0"
            Icon="{ui:SymbolIcon HandOpenHeart32}"
            Content="Open source dialog"
            Command="{Binding ViewModel.ShowOpenSourceDialogCommand}" />

        <ui:TextBlock
            Margin="0 12 0 0"
            Text="Tools"
            FontTypography="BodyStrong" />
        <ui:CardAction
            Margin="0 8 0 0"
            Icon="{ui:SymbolIcon SlideSearch24}"
            Content="Search elements dialog"
            Command="{Binding ViewModel.ShowSearchElementsDialogCommand}" />
        <ui:CardAction
            Margin="0 8 0 0"
            Icon="{ui:SymbolIcon BroadActivityFeed24}"
            Content="Modules dialog"
            Command="{Binding ViewModel.ShowModulesDialogCommand}" />
        <ui:CardAction
            Margin="0 8 0 0"
            Icon="{ui:SymbolIcon LeafOne24}"
            Content="BuiltIn parameters dialog"
            Command="{Binding ViewModel.ShowParametersDialogCommand}" />
        <ui:CardAction
            Margin="0 8 0 0"
            Icon="{ui:SymbolIcon LeafTwo24}"
            Content="BuiltIn categories dialog"
            Command="{Binding ViewModel.ShowCategoriesDialogCommand}" />
        <ui:CardAction
            Margin="0 8 0 0"
            Icon="{ui:SymbolIcon LeafThree24}"
            Content="Forge schema dialog"
            Command="{Binding ViewModel.ShowForgeSchemaDialogCommand}" />

        <ui:TextBlock
            Margin="0 12 0 0"
            Text="Edit dialogs"
            FontTypography="BodyStrong" />
        <ui:CardAction
            Margin="0 8 0 0"
            Icon="{ui:SymbolIcon Edit24}"
            Content="Edit value dialog"
            Command="{Binding ViewModel.ShowEditValueDialogCommand}" />
        <ui:CardAction
            Margin="0 8 0 0"
            Icon="{ui:SymbolIcon EditSettings24}"
            Content="Edit INI entry dialog"
            Command="{Binding ViewModel.ShowUpdateIniEntryDialogCommand}" />
        <ui:CardAction
            Margin="0 8 0 0"
            Icon="{ui:SymbolIcon EditSettings24}"
            Content="Create INI entry dialog"
            Command="{Binding ViewModel.ShowCreateIniEntryDialogCommand}" />
    </StackPanel>

</Page>